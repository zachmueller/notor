{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"declaration": false,
		"sourceMap": true,
		"types": ["node"]
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "results", "test-vault"]
}